import random
import string

def password_generator():
    print("üîê –ì–ï–ù–ï–†–ê–¢–û–† –ü–ê–†–û–õ–ï–ô")
    print("=" * 25)
    
    try:
        # –í–≤–æ–¥ –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤
        length = int(input("–î–ª–∏–Ω–∞ –ø–∞—Ä–æ–ª—è (8-20): "))
        if length < 8 or length > 20:
            print("‚ùå –î–ª–∏–Ω–∞ –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –æ—Ç 8 –¥–æ 20 —Å–∏–º–≤–æ–ª–æ–≤!")
            return
        
        use_digits = input("–ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Ü–∏—Ñ—Ä—ã? (y/n): ").lower() == 'y'
        use_special = input("–ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ —Å–∏–º–≤–æ–ª—ã? (y/n): ").lower() == 'y'
        
        # –°–æ–∑–¥–∞–Ω–∏–µ –Ω–∞–±–æ—Ä–∞ —Å–∏–º–≤–æ–ª–æ–≤
        characters = string.ascii_letters  # –±—É–∫–≤—ã –≤–µ—Ä—Ö–Ω–µ–≥–æ –∏ –Ω–∏–∂–Ω–µ–≥–æ —Ä–µ–≥–∏—Å—Ç—Ä–∞
        
        if use_digits:
            characters += string.digits
        if use_special:
            characters += "!@#$%^&*()_+-="
        
        if not characters:
            print("‚ùå –ù—É–∂–Ω–æ –≤—ã–±—Ä–∞—Ç—å —Ö–æ—Ç—è –±—ã –æ–¥–∏–Ω —Ç–∏–ø —Å–∏–º–≤–æ–ª–æ–≤!")
            return
        
        # –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –ø–∞—Ä–æ–ª—è
        password = ''.join(random.choice(characters) for _ in range(length))
        
        # –í—ã–≤–æ–¥ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞
        print("\n" + "=" * 25)
        print("üîí –í–ê–® –ü–ê–†–û–õ–¨:")
        print(f"üìù {password}")
        print(f"üìè –î–ª–∏–Ω–∞: {len(password)} —Å–∏–º–≤–æ–ª–æ–≤")
        print("=" * 25)
        
        # –û—Ü–µ–Ω–∫–∞ —Å–ª–æ–∂–Ω–æ—Å—Ç–∏
        strength = "—Å–ª–∞–±—ã–π"
        if length >= 12 and use_digits and use_special:
            strength = "–æ—á–µ–Ω—å —Å–∏–ª—å–Ω—ã–π"
        elif length >= 10 and (use_digits or use_special):
            strength = "—Å–∏–ª—å–Ω—ã–π"
        elif length >= 8:
            strength = "—Å—Ä–µ–¥–Ω–∏–π"
            
        print(f"üí™ –°–ª–æ–∂–Ω–æ—Å—Ç—å: {strength}")
        
    except ValueError:
        print("‚ùå –û—à–∏–±–∫–∞! –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–æ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–µ —á–∏—Å–ª–∞.")

# –ó–∞–ø—É—Å–∫ –ø—Ä–æ–≥—Ä–∞–º–º—ã
if __name__ == "__main__":
    password_generator()